<div id="search-results" class="<%= @resource ? 'resource-results search-results' : 'search-results'%>">

  <div class="edi-statement">
    Please note that some historical materials may contain harmful content and/or descriptions. <a href="https://www.lib.ncsu.edu/scrc/reparative-archival-description" target="libraries">Learn how weâ€™re addressing it.</a>
  </div>
      
  <% if @resource %>
    <%= results_heading %>
    <%= search_pagination %>
    <%= render_resource_results(@response['response']['docs'], @resource) %>
    <%= search_pagination %>
  <% else %>

    <div class="grid-x grid-margin-x row">

      <div class="cell medium-3 show-for-medium">
        <%= facet_options %>
      </div>

      <div class="cell medium-9">
        <%= results_heading %>

        <%= active_filters %>

        <%= search_pagination %>

        <% @response['grouped']['resource_uri']['groups'].each do |g| %>
          <% if g == @response['grouped']['resource_uri']['groups'].last %>
            <%= render_group(g, class: 'last').html_safe %>
          <% else %>
            <%= render_group(g).html_safe %>
          <% end %>
        <% end %>

        <%= search_pagination %>

      </div>
    </div>

  <% end %>
</div>
